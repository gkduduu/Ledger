<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/DDark">

    <View
        android:layout_width="match_parent"
        android:layout_height="100dp"
        android:background="@color/DGreen"
        android:layout_above="@+id/brown"></View>
    <View
        android:id="@+id/brown"
        android:layout_width="match_parent"
        android:layout_height="100dp"
        android:background="@color/DBrown"
        android:layout_centerInParent="true"></View>
    <View
        android:layout_width="match_parent"
        android:layout_height="100dp"
        android:layout_below="@+id/brown"
        android:background="@color/DOrange"></View>

</RelativeLayout>